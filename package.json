{
  "name": "repoforge",
  "version": "0.3.0",
  "description": "CLI-first, policy-driven GitHub repository governance and automation",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "repoctl": "dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nom-nom-hub/RepoForge.git"
  },
  "homepage": "https://github.com/Nom-nom-hub/RepoForge#readme",
  "bugs": {
    "url": "https://github.com/Nom-nom-hub/RepoForge/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test dist/**/*.test.js",
    "lint": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run type-check && npm run test || true"
  },
  "keywords": [
    "github",
    "automation",
    "ci",
    "governance",
    "security",
    "devops",
    "workflow",
    "github-actions",
    "policy",
    "standards"
  ],
  "author": "RepoForge Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "js-yaml": "^4.1.0",
    "octokit": "^3.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "typescript": "^5.3.3"
  }
}
